# username / password request (actual text)
username_font           Courier:size=8:bold:dpi=96
username_color          #FF0000
password_font           Courier:size=8:bold:dpi=96
password_color          #FF0000
username_x              20
username_y              20
password_x              20
password_y              20

username_msg            login:
password_msg            pass:
